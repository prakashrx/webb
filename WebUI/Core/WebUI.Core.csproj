<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0-windows</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <UseWindowsForms>true</UseWindowsForms>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Web.WebView2" Version="1.0.2783.20" />
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="9.0.0" />
  </ItemGroup>

  <!-- Build webui-api and core extension -->
  <Target Name="BuildWebUIApi" BeforeTargets="Build">
    <Exec Command="npm run build" WorkingDirectory="..\webui-api" Condition="Exists('..\webui-api\package.json')" />
  </Target>
  
  <Target Name="BuildCoreExtension" BeforeTargets="Build">
    <Exec Command="npm run build" WorkingDirectory="..\extensions\core" Condition="Exists('..\extensions\core\package.json')" />
  </Target>

  <ItemGroup>
    <Content Include="..\webui-api\dist\**\*" Condition="Exists('..\webui-api\dist')">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <Link>webui-api\%(RecursiveDir)%(Filename)%(Extension)</Link>
    </Content>
    <!-- Core extension - only manifest and built output -->
    <Content Include="..\extensions\core\manifest.json" Condition="Exists('..\extensions\core\manifest.json')">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <Link>extensions\core\manifest.json</Link>
    </Content>
    <Content Include="..\extensions\core\dist\**\*" Condition="Exists('..\extensions\core\dist')">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <Link>extensions\core\dist\%(RecursiveDir)%(Filename)%(Extension)</Link>
    </Content>
  </ItemGroup>


</Project>
